{
  "name": "goguma_chat",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bun run --cwd apps/web dev",
    "build": "bun run --cwd apps/web build",
    "start": "bun run --cwd apps/web start",
    "lint": "bun run lint:web && bun run lint:native && bun run lint:ui",
    "lint:web": "bun run --cwd apps/web lint",
    "lint:native": "bun run --cwd apps/native lint",
    "lint:ui": "bun run --cwd packages/ui lint",
    "db:generate": "bunx --bun drizzle-kit generate --config drizzle.config.ts",
    "db:push": "bunx --bun drizzle-kit push --config drizzle.config.ts",
    "db:studio": "bunx --bun drizzle-kit studio --config drizzle.config.ts",
    "native:start": "bun run --cwd apps/native start",
    "native:android": "bun run --cwd apps/native android",
    "native:ios": "bun run --cwd apps/native ios",
    "native:web": "bun run --cwd apps/native web"
  },
  "trustedDependencies": [
    "@swc/core",
    "unrs-resolver"
  ],
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@eslint/compat": "1.4.1",
    "@eslint/eslintrc": "3.3.1",
    "@types/react": "19.2.4",
    "@typescript-eslint/eslint-plugin": "8.46.4",
    "@typescript-eslint/parser": "8.46.4",
    "dotenv": "17.2.3",
    "drizzle-kit": "0.31.7",
    "eslint": "9.39.1",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-react-native": "5.0.0",
    "prettier": "3.6.2"
  },
  "packageManager": "bun@1.3.2",
  "dependencies": {
    "motion": "12.23.24"
  }
}